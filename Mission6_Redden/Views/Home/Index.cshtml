@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">The Joel Hilton Film Collection</h1>
    <br/>
    <p>A curated list of movies and TV shows by Joel Hilton.</p>
    <br/><br/>
    <img src="/img/joel.jpg" class="img-fluid" alt="Joel Hilton" >
</div>
<br/>
<br/>
<main class="container text-center">
    <h2>Movie Collection</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Category</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@(movie.Edited ? "Yes" : "No")</td>
                    <td>@movie.LentTo</td>
                    <td>@movie.Notes</td>
                </tr>
            }
        </tbody>
    </table>
</main>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            if ('@TempData["MovieAdded"]' === 'true') {
                alert("Movie added successfully!");
            }
        });
    </script>
}