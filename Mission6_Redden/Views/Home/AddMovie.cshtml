@model Mission6_Redden.Models.Movie

@{
    ViewData["Title"] = "Add a Movie to the Collection";
}

<div class="text-center">
    <h1 class="display-4">Add a Movie to the Collection</h1>
    <br/>
</div>

<main class="container">
    <form asp-action="AddMovie" method="post">
        <!-- Title (Required) -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title:</label>
            <input asp-for="Title" class="form-control" required>
        </div>

        <!-- Category (Required) -->
        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category:</label>
            <input asp-for="Category" class="form-control" required>
        </div>

        <!-- Year (Required) -->
        <div class="mb-3">
            <label asp-for="Year" class="form-label">Year:</label>
            <input asp-for="Year" class="form-control" type="number" required>
        </div>

        <!-- Director (Required) -->
        <div class="mb-3">
            <label asp-for="Director" class="form-label">Director:</label>
            <input asp-for="Director" class="form-control" required>
        </div>

        <!-- Rating (Dropdown Required) -->
        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating:</label>
            <select asp-for="Rating" class="form-select" required>
                <option value="">Select a Rating</option>
                <option>G</option>
                <option>PG</option>
                <option>PG-13</option>
                <option>R</option>
            </select>
        </div>
        <br/>
        <!-- Edited (Optional Checkbox) -->
        <div class="form-check">
            <input asp-for="Edited" class="form-check-input" type="checkbox">
            <label asp-for="Edited" class="form-check-label">Edited?</label>
            <input type="hidden" asp-for="Edited" value="false">
        </div>
        <br/>
        <!-- Lent To (Optional) -->
        <div class="mb-3">
            <label asp-for="LentTo" class="form-label">Lent To:</label>
            <input asp-for="LentTo" class="form-control">
        </div>

        <!-- Notes (Optional, Max 25 Characters) -->
        <div class="mb-3">
            <label asp-for="Notes" class="form-label">Notes (Max 25 characters):</label>
            <input asp-for="Notes" class="form-control" maxlength="25">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Add Movie</button>
    </form>
</main>
