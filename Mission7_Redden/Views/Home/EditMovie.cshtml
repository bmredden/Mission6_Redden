@model Mission7_Redden.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<header class="text-center mt-4">
    <h1>Edit Movie</h1>
</header>

<main class="container">
    <form asp-action="EditMovie" asp-controller="Home" method="post">
        <input type="hidden" asp-for="MovieId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title:</label>
            <input asp-for="Title" class="form-control" required>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label">Year:</label>
            <input asp-for="Year" class="form-control" type="number" min="1888" required>
        </div>

        <div class="form-check">
            <input asp-for="Edited" class="form-check-input" type="checkbox">
            <label asp-for="Edited" class="form-check-label">Edited?</label>
        </div>

        <div class="form-check">
            <input asp-for="CopiedToPlex" class="form-check-input" type="checkbox">
            <label asp-for="CopiedToPlex" class="form-check-label">Copied to Plex?</label>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</main>